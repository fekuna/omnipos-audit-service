# Development Dockerfile with Air for hot-reloading
FROM golang:1.24-alpine AS development

# Install Air for hot-reloading
RUN go install github.com/air-verse/air@v1.61.1

# Install build dependencies
RUN apk add --no-cache git make

# Set working directory
WORKDIR /app

# Copy shared packages first
COPY omnipos-pkg /app/omnipos-pkg
COPY omnipos-proto /app/omnipos-proto

# Copy go mod files
WORKDIR /app/omnipos-audit-service
COPY omnipos-audit-service/go.mod omnipos-audit-service/go.sum ./

RUN go mod download

# Copy the rest of the source code
COPY omnipos-audit-service/ ./

# Expose gRPC port
EXPOSE 8086

# Copy entrypoint script
COPY omnipos-audit-service/docker-entrypoint.sh /docker-entrypoint.sh
RUN chmod +x /docker-entrypoint.sh

# Run entrypoint script
CMD ["/docker-entrypoint.sh"]
